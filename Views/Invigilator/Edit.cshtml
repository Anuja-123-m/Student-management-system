@model StudentRecordManagementSystem.Models.Student
@{
    ViewData["Title"] = "Edit Marks";
}
<h2>Edit Marks - @Model.RollNumber</h2>
<form asp-action="Edit" method="post" asp-route-rollNumber="@Model.RollNumber">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-md-2 mb-3">
            <label asp-for="Maths" class="form-label"></label>
            <input asp-for="Maths" class="form-control" />
            <span asp-validation-for="Maths" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="Physics" class="form-label"></label>
            <input asp-for="Physics" class="form-control" />
            <span asp-validation-for="Physics" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="Chemistry" class="form-label"></label>
            <input asp-for="Chemistry" class="form-control" />
            <span asp-validation-for="Chemistry" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="English" class="form-label"></label>
            <input asp-for="English" class="form-control" />
            <span asp-validation-for="English" class="text-danger"></span>
        </div>
        <div class="col-md-2 mb-3">
            <label asp-for="Programming" class="form-label"></label>
            <input asp-for="Programming" class="form-control" />
            <span asp-validation-for="Programming" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
<partial name="_ValidationScriptsPartial" />
